<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Encabezado con logo y tÃ­tulo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo"
                android:contentDescription="@string/logo_desc" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completa tu perfil"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estos datos nos ayudan a personalizar tu experiencia"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Tarjeta: Datos personales -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos personales"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <!-- Fecha de nacimiento (abre MaterialDatePicker) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilFecha"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/input_bg"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:helperTextTextAppearance="@style/TextInputHelper.Large"
                    app:errorTextAppearance="@style/TextInputError.Large">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFecha"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:hint="Fecha de nacimiento"
                        android:textSize="17sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Sexo (dropdown) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilSexo"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:boxBackgroundColor="@color/input_bg"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusBottomEnd="25dp">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/actSexo"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Sexo"
                        android:inputType="none"
                        android:textSize="17sp"
                        android:dropDownVerticalOffset="8dp"
                        android:dropDownHeight="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta: Medidas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medidas"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <!-- Altura con sufijo cm -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilAltura"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/input_bg"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:suffixText="cm"
                    app:helperTextTextAppearance="@style/TextInputHelper.Large"
                    app:errorTextAppearance="@style/TextInputError.Large">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAltura"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Altura"
                        android:textSize="17sp"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Peso con sufijo kg -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPeso"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:boxBackgroundColor="@color/input_bg"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:suffixText="kg"
                    app:helperTextTextAppearance="@style/TextInputHelper.Large"
                    app:errorTextAppearance="@style/TextInputError.Large">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPeso"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Peso"
                        android:textSize="17sp"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta: Salud -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salud"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <!-- Enfermedad (dropdown abajo) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEnfermedad"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/input_bg"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusBottomEnd="25dp">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/actEnfermedad"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Enfermedad"
                        android:inputType="none"
                        android:textSize="17sp"
                        android:dropDownVerticalOffset="8dp"
                        android:dropDownHeight="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Otros (solo si elige 'Otros') -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilOtros"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    app:boxBackgroundColor="@color/input_bg"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:helperTextTextAppearance="@style/TextInputHelper.Large"
                    app:errorTextAppearance="@style/TextInputError.Large">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOtros"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Especifica la enfermedad"
                        android:textSize="17sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- BotÃ³n GUARDAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="GUARDAR"
            android:textStyle="bold"
            android:textSize="17sp"
            app:cornerRadius="40dp"
            app:backgroundTint="@color/vitalence_red"
            android:textColor="@color/white" />

        <!-- espacio final -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>
</ScrollView>
