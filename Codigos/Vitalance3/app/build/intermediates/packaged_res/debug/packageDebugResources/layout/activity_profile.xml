<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/logo_desc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completa tu perfil"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            app:layout_constraintTop_toBottomOf="@id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estos datos nos ayudan a personalizar tu experiencia"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"/>

        <!-- Fecha de nacimiento (abre DatePicker) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilFecha"
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:boxBackgroundColor="@color/input_bg"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:helperTextTextAppearance="@style/TextInputHelper.Large"
            app:errorTextAppearance="@style/TextInputError.Large"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFecha"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:focusable="false"
                android:clickable="true"
                android:hint="Fecha de nacimiento"
                android:textSize="17sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sexo (dropdown) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSexo"
            style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:boxBackgroundColor="@color/input_bg"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/tilFecha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/actSexo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Sexo"
                android:inputType="none"
                android:textSize="17sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Altura (cm) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilAltura"
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:boxBackgroundColor="@color/input_bg"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:helperTextTextAppearance="@style/TextInputHelper.Large"
            app:errorTextAppearance="@style/TextInputError.Large"
            app:layout_constraintTop_toBottomOf="@id/tilSexo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAltura"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Altura (cm)"
                android:textSize="17sp"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Peso (kg) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPeso"
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:boxBackgroundColor="@color/input_bg"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:helperTextTextAppearance="@style/TextInputHelper.Large"
            app:errorTextAppearance="@style/TextInputError.Large"
            app:layout_constraintTop_toBottomOf="@id/tilAltura"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPeso"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Peso (kg)"
                android:textSize="17sp"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Enfermedad (dropdown) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEnfermedad"
            style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:boxBackgroundColor="@color/input_bg"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/tilPeso"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/actEnfermedad"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enfermedad"
                android:inputType="none"
                android:textSize="17sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Otros (si elige 'Otros') -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilOtros"
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:boxBackgroundColor="@color/input_bg"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:helperTextTextAppearance="@style/TextInputHelper.Large"
            app:errorTextAppearance="@style/TextInputError.Large"
            app:layout_constraintTop_toBottomOf="@id/tilEnfermedad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etOtros"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Especifica la enfermedad"
                android:textSize="17sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- GUARDAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardar"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="GUARDAR"
            android:textStyle="bold"
            android:textSize="17sp"
            app:cornerRadius="40dp"
            app:backgroundTint="@color/vitalence_red"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tilOtros"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
